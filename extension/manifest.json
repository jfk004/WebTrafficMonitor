{
  "manifest_version": 3,
  "name": "Web Traffic Monitor",
  "version": "0.1.0",
  "description": "Monitor web traffic and get AI-powered insights about what websites are doing with your data. Uses OpenAI to analyze network requests, API calls, WebSocket connections, and form submissions.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Traffic Monitor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
